# i3status configuration file.
# see "man i3status" for documentation.

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# ß
# If the above line is not correctly displayed, fix your editor first!

general {
  colors = true
  interval = 1
}

order += "run_watch DOCKER"
order += "run_watch BITCOIN"

order += "disk /"
order += "disk /tmp"
order += "disk /var"
order += "disk /home"
order += "disk /home/projects"

order += "wireless _first_"
order += "ethernet _first_"

wireless _first_ {
  format_up = "  %essid%quality "
  format_down = " "
}

ethernet _first_ {
  # if you use %speed, i3status requires root privileges
  format_up = "E:%ip"
  format_down = ""
}

run_watch DOCKER {
  pidfile = "/run/docker.pid"
  format = ""
  format_down = ""
}

run_watch BITCOIN {
  pidfile = "/run/bitcoind/bitcoind.pid"
  format = ""
  format_down = ""
}

disk "/" {
  format = "/ %avail"
  prefix_type = "binary"
  threshold_type = "gbytes_avail"
  low_threshold = "10"
}

disk "/home" {
  format = "~ %avail"
  prefix_type = "binary"
  threshold_type = "gbytes_avail"
  low_threshold = "20"
}

disk "/tmp" {
  format = "  %avail"
  prefix_type = "binary"
  threshold_type="gbytes_avail"
  low_threshold = "3"
}

disk "/home/projects" {
  format = "  %avail"
  prefix_type = "binary"
  threshold_type="gbytes_avail"
  low_threshold = "5"
}

disk "/var" {
  format = "  %avail"
  prefix_type = "binary"
  threshold_type = "gbytes_avail"
  low_threshold = "5"
}

