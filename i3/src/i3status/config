# i3status configuration file.
# see "man i3status" for documentation.

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# ß
# If the above line is not correctly displayed, fix your editor first!

general {
  colors = true
  interval = 1
}

order += "path_exists SCAN_ALERT"
order += "path_exists REACHABILITY"

order += "run_watch DOCKER"
order += "run_watch BITCOIN"

order += "cpu_usage"
order += "cpu_temperature 0"
order += "cpu_temperature 1"
order += "load"

order += "disk /"
order += "disk /tmp"
order += "disk /var"
order += "disk /home"
order += "disk /home/projects"

order += "wireless _first_"
order += "ethernet _first_"
order += "tztime local"
order += "volume master"
order += "battery 1"

path_exists SCAN_ALERT {
  path = "/var/log/scand.log"
  format = "PORT_SCANNNING_WARN"
  format_down = ""
}

path_exists REACHABILITY {
  path = "/var/tmp/.reachability"
  format = "->"
  format_down = "x"
}

cpu_usage {
  format = "U:%usage"
  max_threshold = "99"
}

cpu_temperature 0 {
  format = "C:%degrees°C"
  max_threshold = "90"
  path = "/sys/devices/platform/coretemp.0/hwmon/hwmon1/temp1_input"
}

cpu_temperature 1 {
  format = "G:%degrees°C"
  max_threshold = "80"
  path = "/sys/devices/pci0000:00/0000:00:01.0/0000:01:00.0/hwmon/hwmon0/temp1_input"
}

wireless _first_ {
  format_up = "  %essid%quality "
  format_down = " "
}

ethernet _first_ {
  # if you use %speed, i3status requires root privileges
  format_up = "E:%ip"
  format_down = ""
}

tztime local {
  format = " %Y.%m.%d  %H:%M:%S"
}

load {
  format = "L:%1min"
  max_threshold = "3"
}

run_watch DOCKER {
  pidfile = "/run/docker.pid"
  format = ""
  format_down = ""
}

run_watch BITCOIN {
  pidfile = "/run/bitcoind/bitcoind.pid"
  format = ""
  format_down = ""
}

disk "/" {
  format = "/ %avail"
  prefix_type = "binary"
  threshold_type = "gbytes_avail"
  low_threshold = "10"
}

disk "/home" {
  format = "~ %avail"
  prefix_type = "binary"
  threshold_type = "gbytes_avail"
  low_threshold = "20"
}

disk "/tmp" {
  format = "  %avail"
  prefix_type = "binary"
  threshold_type="gbytes_avail"
  low_threshold = "3"
}

disk "/home/projects" {
  format = "  %avail"
  prefix_type = "binary"
  threshold_type="gbytes_avail"
  low_threshold = "5"
}

disk "/var" {
  format = "  %avail"
  prefix_type = "binary"
  threshold_type = "gbytes_avail"
  low_threshold = "5"
}

volume master {
  format = "♪ %volume"
  format_muted = "!♪ (%volume)"
  device = "default"
}

battery 1 {
  format = "%status  %percentage %remaining %emptytime"
  format_down = "no_battery"
  status_chr = "⚡ CHR"
  status_bat = "BAT"
  status_unk = "? UNK"
  status_full = "☻ FULL"
  path = "/sys/class/power_supply/BAT%d/uevent"
  low_threshold = 10
}
